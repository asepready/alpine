# Use a specific version of the official Alpine Linux image as the base image
FROM alpine:3.16

# Install Nginx and necessary packages
RUN apk add --no-cache nginx && \
  adduser -D -g 'www' www && \
  mkdir -p /var/www/html && \
  chown -R www:www /var/www/html

# Copy the Nginx configuration file and website files
COPY html/ /var/www/html/
COPY nginx.conf /etc/nginx/nginx.conf

# Change ownership of the Nginx configuration file
RUN chown www:www /etc/nginx/nginx.conf

# Expose port 80
EXPOSE 80

# Switch to non-root user
USER www

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]
