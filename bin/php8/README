# Build Image
podman build -t php8:v3.16 .

# Run container by Image
podman run -d -p 9000:9000 --name php php8:v3.16

podman run -d \
  --name php-fpm \
  -p 9000:9000 \
  -v app-data:/var/www/html \
  -v /var/log/php8-fpm:/var/log/php8-fpm \
  php8:v3.16

# Console Container
podman exec -ti php-fpm /bin/sh
